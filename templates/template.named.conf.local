//
// named.conf.local
//

key "{key_name}" {{
	algorithm hmac-md5;
	secret "{secret_key}";
}};

zone "{domain_name}" IN {{
        type master;
        file "/etc/bind/forward.cloudzone";
        journal "/var/lib/bind/forward.cloudzone.jnl";
        allow-update {{ key "{key_name}"; }};
}};

{reverse_zones}

